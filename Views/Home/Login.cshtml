@{
    ViewBag.Title = "Auto Service Iliri";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Auto Service Iliri</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #111;
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            border: 1px solid #dc3545;
            background-color: #222;
            padding: 1.5rem;
            width: 450px;
        }

        .card-header {
            background-color: #dc3545;
            padding: 1rem;
        }

            .card-header h4 {
                color: #fff;
                margin: 0;
            }

        .form-control {
            background-color: #333;
            color: #fff;
            border: 1px solid #555;
        }

            .form-control:focus {
                border-color: #dc3545;
                box-shadow: none;
            }

        .btn-mechanic {
            background-color: #dc3545;
            color: white;
            font-weight: bold;
            border: none;
        }

            .btn-mechanic:hover {
                background-color: #c82333;
            }

        .alert-danger {
            background-color: #ff4d4d;
            color: #000;
            border: none;
        }

        .svg-icon {
            display: block;
            margin: 0 auto 1rem auto;
            width: 80px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="card shadow-lg text-white">
        <div class="text-center">
            <!-- SVG car icon -->
            <svg class="svg-icon" viewBox="0 0 64 64" fill="#dc3545" xmlns="http://www.w3.org/2000/svg">
                <path d="M2 40V33c0-1.1.9-2 2-2h2l4-9c1.2-2.8 3.9-5 7-5h30c3.1 0 5.8 2.2 7 5l4 9h2c1.1 0 2 .9 2 2v7c0 1.1-.9 2-2 2h-2v4a2 2 0 01-2 2h-4a2 2 0 01-2-2v-4H14v4a2 2 0 01-2 2h-4a2 2 0 01-2-2v-4H4c-1.1 0-2-.9-2-2zM18 44a4 4 0 108 0 4 4 0 00-8 0zm20 0a4 4 0 108 0 4 4 0 00-8 0zM12.6 28h38.8L48 22c-.5-1.2-1.7-2-3-2H19c-1.3 0-2.5.8-3 2l-3.4 6z" />
            </svg>
        </div>

        <div class="card-header text-center">
            <h4>Auto Service Iliri</h4>
        </div>
        <div class="card-body">
            <form method="post" action="@Url.Action("Index", "Login")">
                <div class="mb-3">
                    <label for="username" class="form-label text-white">Username</label>
                    <input type="text" name="username" id="username" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label text-white">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required />
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">
                        @ViewBag.Error
                    </div>
                }
                <div class="d-grid">
                    <button type="submit" class="btn btn-mechanic">Login</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
